<Page x:Class="Administrator.Pages.MainMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Administrator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="MainMainPage">

    <Grid>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
                <Button x:Name="FishBtn" Style="{StaticResource ImportantBtn}"  Content="Рыбки" Click="FishBtn_Click"/>
                <Button x:Name="AquariumBtn" Style="{StaticResource ImportantBtn}" Content="Аквариумы" Click="AquariumBtn_Click"/>
                <Button x:Name="InventoryBtn" Style="{StaticResource ImportantBtn}" Content="Инвентарь" Click="InventoryBtn_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
                <Button x:Name="OrdersBtn" Style="{StaticResource ImportantBtn}" Content="Заказы" Click="OrdersBtn_Click"/>
                <Button x:Name="UsersBtn" Style="{StaticResource ImportantBtn}" Content="Пользователи" Width="198" Click="UsersBtn_Click"/>
                <Button x:Name="AccountBtn" Style="{StaticResource ImportantBtn}" Content="Аккаунт" Click="AccountBtn_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
                <Button x:Name="PointsBtn" Style="{StaticResource ImportantBtn}" Content="Пункты выдачи"  Width="208" Click="PointsBtn_Click"/>
                <Button x:Name="TypesBtn" Style="{StaticResource ImportantBtn}" Content="Типы" Click="TypesBtn_Click"/>
               
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
