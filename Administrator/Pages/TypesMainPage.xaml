<Page x:Class="Administrator.Pages.TypesMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Administrator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TypesMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Style="{StaticResource AllBtn}" x:Name="InventTypesBtn" Content="Типы инвентаря" Margin="5" Click="InventTypesBtn_Click" />
            <Button Style="{StaticResource AllBtn}" x:Name="FishTypesBtn" Content="Типы рыб" Margin="5" Click="FishTypesBtn_Click" />
        </StackPanel>
        <Frame x:Name="TypesFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
